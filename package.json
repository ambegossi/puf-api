{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "author": "Anderson Begossi <andersonbegossi@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "nodemon --exec babel-node -- -r dotenv-safe/config src/index.js",
    "prebuild": "rm -Rf ./dist",
    "build": "babel src --extensions \".js\" --ignore \"*.spec.js,*.test.js\" --out-dir dist --copy-files",
    "fix": "run-s \"fix:* {@}\" --",
    "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "lint": "yarn fix:lint src/**/*.{js,ts,md,json}",
    "format": "yarn fix:format 'src/**/*.(js|ts|md|json)'",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./src/**/*.{js,md,json}": [
      "yarn fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/node": "^7.15.4",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/preset-env": "^7.15.6",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prisma": "3.2.1"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "@prisma/client": "3.2.1",
    "dotenv": "^10.0.0",
    "dotenv-safe": "^8.2.0",
    "koa": "^2.13.3"
  }
}
